{
  "name": "@zphyrx/eslint-config-testing-library",
  "version": "1.1.2",
  "private": false,
  "homepage": "https://zphyrx.com",
  "bugs": {
    "url": "https://github.com/zphyrx/configs/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zphyrx/configs.git"
  },
  "license": "MIT",
  "author": "jcsilverx <jcsilverx@gmail.com>",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    },
    "./react": {
      "import": {
        "types": "./dist/esm/configs/react.d.ts",
        "default": "./dist/esm/configs/react.js"
      }
    },
    "./vue": {
      "import": {
        "types": "./dist/esm/configs/vue.d.ts",
        "default": "./dist/esm/configs/vue.js"
      }
    }
  },
  "module": "./dist/esm/index.js",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "check-types": "tsc",
    "lint": "eslint . --max-warnings 0",
    "clean": "rm -rf node_modules dist"
  },
  "dependencies": {
    "eslint-plugin-testing-library": "^7.1.1"
  },
  "devDependencies": {
    "@typescript-eslint/utils": "^8.21.0",
    "@zphyrx/eslint-config-internal": "workspace:*",
    "@zphyrx/typescript-config": "workspace:*",
    "eslint": "^9.19.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "eslint": "^9.19.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
